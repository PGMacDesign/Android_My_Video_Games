<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Name: "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_game_name"
        android:hint="Final Fantasy 10"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Console: "
        android:id="@+id/textView2"
        android:layout_below="@+id/edit_text_game_name"
        android:layout_marginTop="43dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/edit_text_game_name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_console_name"
        android:hint="Playstation 2"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/edit_text_game_name"
        android:layout_toEndOf="@+id/textView2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Game"
        android:id="@+id/add_game_button"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <!-- Disabling for now.
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignTop="@+id/add_game_button"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/add_game_button"
        android:layout_alignParentStart="true"/>

    -->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_game_listview"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/add_game_button"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>