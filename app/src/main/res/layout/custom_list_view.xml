<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linear_base"
                android:background="@drawable/custom_background"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:weightSum="100"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="30"
            android:id="@+id/linear2"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:src="@drawable/ic_launcher"
                android:id="@+id/custom_list_view_image"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_height="fill_parent"
                android:maxLines="100"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="35"
            android:id="@+id/linear3"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:text="Final Fantasy 7"
                android:id="@+id/custom_list_view_game_name"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_height="fill_parent"
                android:maxLines="100"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="35"
            android:id="@+id/linear4"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:text="Playstation 1"
                android:id="@+id/custom_list_view_console"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_height="fill_parent"
                android:maxLines="100"
                />
            </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/linear_changing"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/left_layout"
            android:layout_weight="30"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/right_layout"
            android:layout_weight="70"
            />

        <!--
        android:gravity="center_vertical"
        android:layout_gravity="center"
        -->


    </LinearLayout>

</LinearLayout>